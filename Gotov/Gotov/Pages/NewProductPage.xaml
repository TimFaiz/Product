<Page x:Class="Gotov.Pages.NewProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gotov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewProductPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" Width="300">
            <TextBlock Text="New Product" FontSize="20" HorizontalAlignment="Center"/>
            <TextBlock Text="Name"/>
            <TextBox Text="{Binding Name}" x:Name="TBName"/>
            <TextBlock Text="Price"/>
            <TextBox Text="{Binding Price}" x:Name="TBPrice"/>
            <TextBlock Text="Sale"/>
            <TextBox Text="{Binding Sale}" x:Name="TBSale"/>
            <Button Content="Add" x:Name="BAdd" Click="BAdd_Click"/>
            <Button Content="Back" x:Name="BBack" Click="BBack_Click"/>
        </StackPanel>
    </Grid>
</Page>
