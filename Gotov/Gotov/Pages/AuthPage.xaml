<Page x:Class="Gotov.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gotov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel Width="300" VerticalAlignment="Center">
            <TextBlock Text="Authorization" FontSize="20" HorizontalAlignment="Center"/>
            <TextBlock Text="Login"/>
            <TextBox x:Name="TBLogin"/>
            <TextBlock Text="Password"/>
            <TextBox x:Name="TBPassword"/>
            <Button x:Name="BSignIn" Content="Sign In" Click="BSignIn_Click"/>
            <Button x:Name="BRegistration" Content="Registration" Click="BRegistration_Click"/>
        </StackPanel>
    </Grid>
</Page>
