<Page x:Class="Gotov.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gotov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <Frame Grid.Column="1" x:Name="SecondFrame" NavigationUIVisibility="Hidden"/>
        <StackPanel Margin="0 50">
            <Button x:Name="BProductList" Content="ProductList" Click="BProductList_Click" Foreground="Bisque" Background="Black" Margin="0 10"/>
            <Button x:Name="BMyOrder" Content="My order" Click="BMyOrder_Click" Foreground="Bisque" Background="Black" Margin="0 10"/>
        </StackPanel>
    </Grid>
</Page>
